<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="32px"
    android:layout_marginVertical="32px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/shelter_img_profile"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/user" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="เปลี่ยนรูปภาพ" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginVertical="8dp"
            android:background="#444" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="ชื่อศูนย์พักพิง"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edit_shelter_name"
                android:layout_width="240dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="หมายเลขใบอนุญาต"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edit_shelter_id"
                android:layout_width="240dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="ที่อยู่"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edit_shelter_addr"
                android:layout_width="240dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="อีเมล"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edit_shelter_email"
                android:layout_width="240dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="เบอร์ติดต่อ"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edit_shelter_tel"
                android:layout_width="240dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Facebook"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edit_shelter_fb"
                android:layout_width="240dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Instagram"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edit_shelter_ig"
                android:layout_width="240dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Line ID"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edit_shelter_line"
                android:layout_width="240dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginVertical="16dp"
            android:background="#444" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_main"
            android:text="บันทึกข้อมูล"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</RelativeLayout>